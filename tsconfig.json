{
	"extends": "fastify-tsconfig",
	"ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
	"compilerOptions": {
	  "esModuleInterop": true,
	  "isolatedModules": true,
	  "moduleResolution": "node",
	  "outDir": "build",
	  "rootDir": "./",
	  "strict": false
	},
	"include": [
	  "*/**/*.ts",
	  "api.ts",
	  "app.ts",
	  "server.ts",
	],
	"exclude": [
	  "node_modules"
	]
}
